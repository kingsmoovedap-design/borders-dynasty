{
  "name": "@kingsmoovedap-design/borders-dynasty",
  "version": "1.0.0",
  "type": "module",
  "description": "CodexChain frontend",
  "main": "dist/bundle.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "prebuild": "npm run lint",
    "start": "node dist/bundle.js",
    "dev": "webpack serve --mode development --config webpack.config.cjs",
    "build": "webpack --config webpack.config.cjs",
    "test": "node test/api.test.js",
    "test:health": "node test/health.test.js",
    "lint": "eslint .",
    "hardhat": "hardhat",
    "prepare": "husky install",
    "compile": "hardhat compile",
    "sync:abis": "node scripts/syncAbis.cjs",
    "compile:sync": "npm run compile && npm run sync:abis",
    "db:push": "drizzle-kit push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kingsmoovedap-design/borders-dynasty.git"
  },
  "homepage": "https://github.com/kingsmoovedap-design/borders-dynasty#readme",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.5",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "babel-loader": "^9.1.3",
    "eslint": "^8.57.0",
    "hardhat": "^2.22.3",
    "html-webpack-plugin": "^5.5.3",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.2"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@types/pg": "^8.16.0",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "ethers": "^6.13.5",
    "globals": "^16.5.0",
    "pg": "^8.16.3",
    "style-loader": "^4.0.0"
  }
}
